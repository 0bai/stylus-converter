@import './mixin'

$gray = #9d9d9d
$white = #fff
$light-gray = #e9e9e9

//  定义一些函数
//  切换字体颜色
toggle-color($oc, $nc)
  color: $oc
  &:hover
    color: $nc

//  切换背景色
toggle-bg($oc, $nc)
  background: $oc
  &:hover
    background: $nc

//  设置图标大与对其方式
set-icon($size, $align)
  font-size: $size
  vertical-align: $align

//  设置a标签状态的颜色
set-link-color($color)
  &:link
    color: $color
  &:visited
    color: $color
  &:hover
    color: $color
  &:active
    color: $color

#app, .page-view, .commponent-tabbar
  min-width: 1200px

html, body, #app
  font-family: 'PingFang SC', 'STHeitiSc-Light', 'Helvetica-Light', 'arial', 'sans-serif'
  font-size: 14px
  height: 100%

ol
  list-style-type: decimal

table
  border-collapse: separate

.tabbar-option-value
  color: #8492a6
  font-size: 12px
  text-align: right

.test-filter-tips-content
  padding-left: 10px

/* 覆盖 element loading 加载背景 */
.loading, .el-loading-mask.el-loading-mask
  background-color: rgba(0, 0, 0, 0.1)

.layer-select > div
  max-width: 200px

.el-dialog__wrapper .el-dialog__body
  padding: 20px

.layer-select ul li
  height: 54px
  line-height: 24px

.select-indicators-tips
  width: 160px

.test-option
  white-space: normal
  padding-left: 10px
  font-size: 14px
  color: #333
  overflow: hidden

  .tips
    font-size: 12px
    color: #999

.is-disabled span
  color: #bfcbd9

.loading-wrapper
  background: rgba(0, 0, 0, 0.3)

a
  text-decoration: none
  set-link-color(#475669)

.el-dialog .dialog-buttons
  text-align: right

.table-wrapper
  margin: 20px 0

  .cell.cell
    padding: 0
    text-align: center

    .el-button
      margin-left: 0

  .description .cell
    text-align: left
    padding-left: 5px

.el-dialog.el-dialog
  min-width: 600px

.element-test-popper
  min-width: 50px
  width: 80px

  .button
    display: block
    margin: 0

.component-upload
  width: 80%

  > div
    width: 100%

    > div
      width: 100%

      .dragger-text
        color: #97a8be
        text-align: center

        & > em
          color: #20a0ff

      .upload-tip
        font-size: 12px
        color: #8391a5
        text-align: center

.page-view
  flex: 1
  overflow: auto
  padding: 0 20px

  .download-button
    color: #20a0ff
    padding: 5px 10px
    border-radius: 5px
    text-decoration: underline

  .filter-wrapper
    margin-bottom: 15px

  label
    margin-right: 10px
    display: inline-block

    .el-select, .el-input
      width: 100px
      margin-bottom: 5px

    .el-date-editor
      width: 220px

    .text-input
      width: 150px

    .el-select .el-input
      width: 100%

  .tooltip-wrapper .cell
    & > .el-tooltip, & > span, & > a
      margin-right: 15px
      display: inline-block

    i, .icon-mixed-chart
      color: #20a0ff
      font-size: 18px
      cursor: pointer
      vertical-align: middle
      margin-left: 5px

    i.icon-stop
      font-size: 16px

    i.icon-view
      font-size: 22px

  .el-pagination
    text-align: right
    margin-bottom: 30px
